rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Avatares do usuário
    match /avatars/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Assets de portfólio do usuário
    match /portfolio-assets/{uid}/{allPaths=**} {
      // Dono pode ler/escrever
      allow write: if request.auth != null && request.auth.uid == uid;
      // Leitura pública apenas para arquivos com metadata.public == "true"
      allow read: if resource.metadata.public == "true" || (request.auth != null && request.auth.uid == uid);
    }

    // Assets de templates (públicos)
    match /templates/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}

